<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DFF2F7"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:padding="8dp"
    >
    
    <ImageView
        android:id="@+id/iconTracksId"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/waves"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/trackNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Track_Name"
        android:layout_toEndOf="@+id/iconTracksId"
        android:layout_centerVertical="true"
        />

    <Button
        android:id="@+id/buttonDeleteId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/trackNameId"
        android:text="delete"
        />

    <TextView
        android:id="@+id/trackPathId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Track_Name"
        android:visibility="gone"
        android:layout_toEndOf="@+id/iconTracksId"
        android:layout_centerVertical="true"
        />
    
</RelativeLayout>